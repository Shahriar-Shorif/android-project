<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:id="@+id/cardMain"
    android:padding="@dimen/_10sdp"
    app:cardBackgroundColor="#32756D6D"
    app:cardElevation="0dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/appLogo"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/app_icon"
            app:civ_border_color="#FFEB3B"
            android:layout_gravity="center_horizontal"
            app:civ_border_width="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            />



        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:fontFamily="@font/solaimanlipi"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="এখানে লিখে পরীক্ষা করুন"
            android:textColor="@color/black"
            android:minLines="4"
            android:maxLines="10"
            android:textSize="@dimen/_16sdp" />


        <RelativeLayout
            android:id="@+id/action"
            android:background="#90009688"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            >


            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_alignParentStart="true"
                android:id="@+id/btnLike"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:background="@drawable/action_status_bg"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_liked"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"/>


            <ImageView
                android:id="@+id/btnCopy"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/action_status_bg"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_copy" />


            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_40sdp"
                android:layout_alignParentEnd="true"
                android:id="@+id/btnShare"
                android:background="@drawable/action_status_bg"
                android:padding="@dimen/_4sdp"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:src="@drawable/ic_share"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>